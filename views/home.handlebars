<div class="container-fluid px-4">
  {{#each quantidade}}
    <div class="row g-3 my-1">

      <div class="col-md-3">

        <div
          class="areas p-3 shadow-sm d-flex-column justify-content-around align-items-center rounded"
        >

          <div class="text-light">

            <h3 class="fs-2">{{this.qtdeAeronave}}</h3>

            <p class="fs-5">Aeronaves</p>
          </div>
          <div class="dados bg-white">
            <a href="/visualizar/aeronave">View Aeronaves</a>
          </div>

        </div>

      </div>
      <div class="col-md-3">

        <div
          class="areas p-3 shadow-sm d-flex-column justify-content-around align-items-center rounded"
        >

          <div class="text-light">

            <h3 class="fs-2">{{this.qtdeAeroporto}}</h3>

            <p class="fs-5">Aeroportos</p>
          </div>
          <div class="dados bg-white">
            <a href="/visualizar/aeroporto">View Aeroportos</a>
          </div>

        </div>

      </div>
      <div class="col-md-3">

        <div
          class="areas p-3 shadow-sm d-flex-column justify-content-around align-items-center rounded"
        >

          <div class="text-light">

            <h3 class="fs-2">{{this.qtdeFabricante}}</h3>

            <p class="fs-5">Fabricantes</p>
          </div>
          <div class="dados bg-white">
            <a href="/visualizar/fabricante">View Fabricantes</a>
          </div>

        </div>

      </div>
      <div class="col-md-3">

        <div
          class="areas p-3 shadow-sm d-flex-column justify-content-around align-items-center rounded"
        >

          <div class="text-light">

            <h3 class="fs-2">{{this.qtdeVoo}}</h3>

            <p class="fs-5">Voos</p>
          </div>
          <div class="dados bg-white">
            <a href="/visualizar/voo">View Voos</a>
          </div>

        </div>

      </div>
    </div>
  {{/each}}
  <div class="control-dados table-responsive" id="home">
    <h2>Últimos Voos adicionados</h2>
    <table id="example" class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Código</th>
          <th>Preço</th>
          <th>Data de Saída</th>
          <th>Data de Chegada</th>
          <th>Trecho</th>
          <th>Aeronave</th>
        </tr>
      </thead>
      <tbody>
        {{#each voos}}
          <tr>
            <td>{{this.idVoo}}</td>
            <td>R$ {{this.valor}}</td>
            <td>{{this.horaSaida}}</td>
            <td>{{this.horaChegada}}</td>
            <td>{{this.idTrecho}}</td>
            <td>{{this.idAeronave}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>